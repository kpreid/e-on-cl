pragma.syntax("0.9")

def broken := Ref.broken("boolean flow expression failed")

def booleanFlow implements DeepFrozen, ExitViaHere {
  to broken() { return broken }
  to failureList(size :int) {
    return [false] + [broken] * size
  }
}