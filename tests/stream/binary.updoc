WholeNum:

  ? def WholeNum :DeepFrozen := <bin:WholeNum>
  # value: <WholeNum>

Reading, immediate

  ? def take := WholeNum.takingFrom(def s := [0, 127, 130, 1, 99].asStream(), now)
  # value: <takeWholeNum>
  
  ? take()
  # value: 0
  
  ? take()
  # value: 127
  
  ? take()
  # value: 257
  
  ? s
  # value: [99].asStream()

Reading, eventual

  ? def take := WholeNum.takingFrom(trickleIn(def s := [0, 130, 1].asStream()), now)
  # value: <takeWholeNum>

  ? take()
  # problem: <Promise> doesn't coerce to a ConstList

  ? def take := WholeNum.takingFrom(trickleIn(def s := [0, 130, 1].asStream()), ::"eventual")
  # value: <takeWholeNum>

  ? interp.waitAtTop(def r := take()); r
  # value: <Promise>
  
  ? r
  # value: 0

  ? interp.waitAtTop(def r := take()); r
  # value: <Promise>
  
  ? r
  # value: 257

Writing, immediate

  ? def write := WholeNum.writingTo(stdoutS)
  # value: <writeWholeNum>

  ? write(10)
  # stdout: 10 
  
  ? write(128)
  # stdout: 129 0 
  
